<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<solid
        		android:color="#c43300" />
            <stroke
                android:width="1dp"
                android:color="#8c0000" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#c43300"
                android:endColor="#992500"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#8c0000" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>
