<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<solid
        		android:color="#ff1b0c" />
            <stroke
                android:width="1dp"
                android:color="#c20000" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff1b0c"
                android:endColor="#b51104"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#c20000" />
            <corners
                android:radius="4dp" />
           	</shape>
    </item>
</selector>
