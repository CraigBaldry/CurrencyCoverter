<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<solid
        		android:color="#633AFF" />
            <stroke
                android:width="1dp"
                android:color="#0000ca" />
            <corners
                android:radius="3dp" />            
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#633AFF"
                android:endColor="#331496"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#0000ca" />
            <corners
                android:radius="4dp" />            
        </shape>
    </item>
</selector>
